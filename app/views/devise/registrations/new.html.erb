<h2>Registro</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  
  <div class="field">
     <%= f.label :Nombres %><br />
     <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
  </div>

  <div class="field">
     <%= f.label :Apellidos %><br />
     <%= f.text_field :apellidos, autofocus: true, autocomplete: "apellidos" %>
  </div>
  
  <div class="field">
    <%= f.label :Email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :Celular %><br />
    <%= f.text_field :celular, autofocus: true, autocomplete: "celular" %>
  </div>

  <div class="field">
    <%= f.label :Localidad %><br />
    <%= f.text_field :localidad, autofocus: true, autocomplete: "localidad" %>
  </div>

  <div class="field">
    <%= f.label :Contraseña %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> caracteres minimos)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :Confirme_Contraseña %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Enviar" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
